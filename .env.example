# Environment Variables Template for PySpark Tutorials
# Copy this file to .env and fill in your actual credentials
# NEVER commit .env file to version control!

# MySQL/Database Configuration
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DATABASE=your_database
MYSQL_USER=your_username
MYSQL_PASSWORD=your_password
MYSQL_TABLE=your_table
MYSQL_JAR_PATH=/path/to/mysql-connector-j-8.3.0.jar

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_REGION=us-east-1
S3_INPUT_PATH=s3a://your-bucket/input/path
S3_OUTPUT_PATH=s3a://your-bucket/output/path
S3_CSV_PATH=s3a://your-bucket/csv/file.csv

# MinIO Configuration
MINIO_ACCESS_KEY=your_minio_access_key
MINIO_SECRET_KEY=your_minio_secret_key
MINIO_ENDPOINT=http://localhost:9000

# Apache Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC=your_topic

# IBM Cloudant Configuration
CLOUDANT_APIKEY=your_cloudant_api_key
CLOUDANT_HOST=https://your-account.cloudantnosqldb.appdomain.cloud
CLOUDANT_USERNAME=your_cloudant_username
CLOUDANT_DATABASE=your_database

# Apache Kudu Configuration
KUDU_MASTER=localhost:7051
KUDU_TABLE=impala::default.your_table
KUDU_JAR_PATH=org.apache.kudu:kudu-spark3_2.12:1.17.0

# Hive Configuration
HIVE_DATABASE=default
HIVE_TABLE=your_table

# Spark User
SPARK_USER=your_username

# Database Connection (Generic)
DB_HOST=your_db_host
DB_PORT=3306
DB_NAME=your_database
DB_USER=your_username
DB_PASSWORD=your_password
DB_TABLE=your_table